<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.freehand.simplestore.viewmodels.left_menu.LeftMenuVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="10dp"
            android:background="@drawable/nav_header_image"
            android:layout_gravity="bottom">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tx_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tx_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="duyminhbk@gmail.com"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>
        <TextView
            android:text="Home"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            style="@style/menu_item"
            app:textDrawableTint="@{@android:color/black}"/>
        <TextView
            android:text="Price"
            android:drawableLeft="@drawable/ic_menu"
            style="@style/menu_item"
            app:textDrawableTint="@{@android:color/black}" />
        <TextView
            android:text="Product"
            android:drawableLeft="@drawable/ic_note"
            style="@style/menu_item"
            app:textDrawableTint="@{@android:color/black}" />
        <TextView
            android:text="Maintenance"
            android:drawableLeft="@drawable/ic_info"
            style="@style/menu_item"
            app:textDrawableTint="@{@android:color/black}"/>
        <TextView
            android:text="Address"
            android:drawableLeft="@drawable/ic_location"
            style="@style/menu_item"
            app:textDrawableTint="@{@android:color/black}"/>
        <TextView
            android:text="Contact"
            android:drawableLeft="@drawable/ic_contact"
            style="@style/menu_item"
            app:textDrawableTint="@{@android:color/black}"/>
    </LinearLayout>
</layout>